<!-- qemu 1.3 libvirt 1.0 file, qcow2 123 -->
<domain type="kvm">
        <name>linux-kvm</name>
        <memory>1048576</memory>
        <vcpu>1</vcpu>
        <cpu>
                <topology sockets='1' cores='1' threads='1' />
        </cpu>
        <os>
                <type arch='x86_64' machine='pc'>hvm</type>
                <!--<type arch="x86_64" machine='rhel5.4.0'>hvm</type> -->
                <boot dev="hd" />
        </os>
        <features>
                <acpi />
                <apic />
                <pae />
        </features>
        <clock offset='localtime'> <!-- utc, localtime -->
                <!--timer name='kvmclock' tickpolicy='catchup' / -->
                <timer name='kvmclock' />
                <timer name='hpet' present='no' />
        </clock>
        <devices>
                <emulator>/usr/bin/qemu-system-x86_64</emulator>
                <disk device="disk" type="block">
                        <driver cache="none" name="qemu" type="raw" io="native"
                                error_policy="stop" />
                        <source dev="/dev/sam/sam" />
                        <target bus="virtio" dev="vda" />
                </disk>
                <!--<interface type="bridge">
                        <source bridge="virbr0" />
                        <model type='virtio' />
                </interface>-->
                <console type="pty">
                        <target port="0" />
                </console>
                <input bus="usb" type="tablet" />
                <input type="mouse" bus="ps2" />
                <graphics autoport="yes" keymap="en-us" listen="0.0.0.0"
                        port="-1" type="vnc" />
                <channel type='unix'>
                        <source mode='bind' path='/var/lib/libvirt/qemu/tvm_1.agent' />
                        <target type='virtio' name='org.qemu.guest_agent.0' />
                </channel>
        </devices>
</domain>